@model IEnumerable<UserScreen.Models.ModelMyAdvertise>

@{
    Layout = null;
}


@{
    ViewBag.Title = "Advertises by Category";
}



<table class="table">
    <thead>
        <tr>
            <th>Advertise ID</th>
            <th>Title</th>
            <th>Description</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var advertise in Model)
        {
            <tr>
               
                <td>@advertise.advertiseTitle</td>
                <td>@advertise.advertiseDescription</td>
                <td>@advertise.advertisePrice</td>
            </tr>
        }
    </tbody>
</table>


